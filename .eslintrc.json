{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/prop-types": "off",
        "no-unused-vars": "off",
        "no-extra-boolean-cast": "off",
        "linebreak-style": [
            "error",
            "windows"
        ],
        "no-console": "error",
        "no-debugger": "error",
        "semi": [
            "error",
            "always"
        ],
        "no-extra-bind": "warn"
    }
}